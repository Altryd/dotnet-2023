<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Organization.Client.Views.VacationVoucherWindow"
        Title="VacationVoucherWindow"
	    SizeToContent="Height"
	    MaxWidth="500"
		WindowStartupLocation="CenterOwner"
		Icon="/Assets/voucher.png">
	<Window.Styles>
		<StyleInclude Source="/OrganizationClientStyles.axaml"/>
	</Window.Styles>
	<Grid Classes="MainGrid" RowDefinitions="Auto, Auto, Auto, Auto, Auto, *" ColumnDefinitions="Auto, *">
		<Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Issue date</Label>
		<DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding IssueDate}" />
		
		<Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Voucher type id</Label>
		<NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding VoucherTypeId}" Minimum="1"/>

		<StackPanel Classes="StackPanelButtons" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
					HorizontalAlignment="Right"
					Orientation="Horizontal">
			<Button IsDefault="True" Command="{Binding OnSubmitCommand}">OK</Button>
			<Button IsCancel="True" Click="CancelButtonOnClick">Cancel</Button>
		</StackPanel>
	</Grid>
</Window>
